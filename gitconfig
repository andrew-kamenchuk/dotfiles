[user]
    name = andrew-kamenchuk
    email = andrew.kamenchuk@gmail.com

[core]
    excludesfile = ~/.gitignore

[commit]
    template = ~/.gitmessage

[diff]
    tool = gvimdiff

[merge]
    tool = gvimdiff
    conflictstyle = diff3

[push]
    default = matching

[apply]
    whitespace = fix

[help]
    autocorrect = 50

[github]
    user = andrew-kamenchuk

[alias]
    lg = "!git --no-pager log --color --graph --pretty=format:'%Cred%h%Creset - %C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit"
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
    commit-rand = "!git commit -m\"$(curl -Ls http://whatthecommit.com/index.txt)\""
    
[include]
    path = ~/.gitconfig.local
