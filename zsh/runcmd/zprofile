# zprofile

# EDITORS:

export EDITOR=vim
export VISUAL=vim
export PAGER=less

# Language

if [[ -z "$LANG" ]]; then
  export LANG='en_US.UTF-8'
fi

# Ensure path arrays do not contain duplicates.
typeset -gU cdpath fpath mailpath path

# Path
path=(
    $HOME/.bin
    $path
)

# JAVA_HOME latest jdk available
export JAVA_HOME=`ls -d /usr/lib/jvm/* | grep '/jdk' | sort -r | head -1`
